package custom.awesome.storage;

public class AweStorageFront {
    public double thickness;
    private AweStorageFrontColumn[] columns();

    public constructor(double thickness=.75inch) {
        this.thickness = thickness;
    }   

    extend public AweStorageFront addColumn(double width) {
        AweStorageFrontColumn column();
        column.width = width;
        columns << column;
        return this;
    }

    extend public AweStorageFront addPiece(int column, double height, int columnSpan=1) {
        if(columns.count <= column) {
            bug("invalid column index");
        }

        AweStorageFrontPiece piece(height);
        columns[column].addPiece(piece);

        double width = columns[column].width;

        if(columnSpan > 1) {
            for(i in 2..columnSpan) {
                if(columns.count <= column + i-1) {
                    bug("invalid column span index");
                }
                columns[column + i-1].addSpace(height);
                width += columns[column + i-1].width;
            }
        }
        
        piece.width = width;

        return this;
    }

    extend public Awe3D get3D() {
        Awe3D prim();
        double x = 0;
        for(c in columns) {
            for(p in c.pieces) {
                point origin(x,0,p.z);
                var aweBox = p.get3D(thickness);
                aweBox.move(origin);
                prim << aweBox;
            }
            x += c.width;
        }
        return prim;
    }
}

{
    AweStorageFront front(.75inch);
    front.addColumn(12inch);
    front.addColumn(24inch);

    front.addPiece(0, 12inch);
    front.addPiece(1, 12inch);

    front.addPiece(0, 36inch, 2);

    test(front.get3D());
}