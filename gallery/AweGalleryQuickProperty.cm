package custom.awesome.gallery;

public class AweGalleryQuickProperty extends ComboQuickProperty {
    private AweGallery gallery;
    private Bool isEditing;
    
    public constructor(str key, str label, AweGalleryItem value, AweGalleryDomain domain, Bool isEditing=null) {
        this.gallery = domain.gallery;
        this.isEditing = isEditing;

        if (!value or value !in domain) {
            value = domain.first().AweGalleryItem;
        }
        
        super(key, label, value, value.class, domain, isEditing.?v);
    }
    
    extend public bool editable() {
        return this.isEditing != null;
    }

    public void build(QuickProperties props) {
        if (this.editable) {
            super(..);
        }
        else {
            ListQuickProperty.build(this, props);
        }

        if (!this.editable or !this.isEditing.?v) {
            controls << new AweGalleryLaunchButton(props, this.gallery, this.value.AweGalleryItem);
        }
    }
}

private class AweGalleryLaunchButton extends Button {
    private AweGallery gallery;
    private AweGalleryItem selectedItem;

    public constructor(Window parentWindow, AweGallery gallery, AweGalleryItem selectedItem=null) {
        this.gallery = gallery;
        this.selectedItem = selectedItem;
        
        super(parentWindow, label="Go to gallery");
    }

    public void release(pointI p) {
        if (this.selectedItem) {
            waitCursorUI {
                this.gallery.launch(this.selectedItem.id);
            }
        }
    }
}