package custom.awesome.product;
use cm.syntax;

private alias tileArray = TestPanelTileModel[];

public aweObject TestPanelModel {
    props(
        Material3D frameMaterial = aluminumMaterial3D,
        double height = 50inch,
        double width = 30inch,
        double thickness = 3inch,
        tileArray tiles = null
    );
}

public class TestPanelConfigurator extends TestPanelModel{
     public aweObjectDomain(
        distance width = DistanceEnum(30inch, 42inch, 48inch)
    );
}

public aweObject TestPanelTileModel {
    props(
        Material3D tileMaterial = blueFabricMaterial3D,
        double thickness = .5inch,
        double yOffset = 0,
        TestPanelModel panel = null
    );
}

public class TestPanelGeometry extends AweGeometry {
    public TestPanelModel model;
    public constructor(TestPanelModel model) {
        this.model = model;
    }
    public box localBound() {
        return box(point(), (model.width, model.thickness, model.height));
    }
    public Primitive3D medium3D() {
        Box3D caixinha(localBound);
        caixinha.setMaterial(model.frameMaterial);
        return caixinha;
    }
}
    
public class TestPanelTileGeometry extends AweGeometry {
    public TestPanelTileModel model;
    public constructor(TestPanelTileModel model) {
        this.model = model;
    }
    public box localBound() {
        return box((0, model.yOffset, 0), (model.panel.width, model.thickness + model.yOffset, model.panel.height));
    }
    public Primitive3D medium3D() {
        Box3D caixinha(localBound);
        caixinha.setMaterial(model.tileMaterial);
        return caixinha;
    }
}

public class TestPanelProduct extends AweProduct {
    public void build() {
        this << TestPanelGeometry(_model.TestPanelModel);
    }
}

public class TestPanelTileProduct extends AweProduct {
    public void build() {
        this << TestPanelTileGeometry(_model.TestPanelTileModel);
    }
}

private aweBinder<TestPanelConfigurator, TestPanelProduct> Panel;
private aweBinder<TestPanelTileModel, TestPanelTileProduct> Tile;

public class TestPanelSnapper extends AweMultiProductSnapper {

    public AweObject initRoot() {
        Panel p();
        p.tiles = tileArray();
        p.tiles << Tile(panel=p, tileMaterial=redFabricMaterial3D, yOffset=-.5inch);
        p.tiles << Tile(panel=p, yOffset = p.thickness);
        return p;
    }
    
}


{ 
    TestPanelSnapper snapper();
    snapper.launch;
}