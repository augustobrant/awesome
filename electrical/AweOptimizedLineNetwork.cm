use custom.awesome.product;

private const double maxLine = .5;

public line[] makeRandonNetwork() {
   line[] network();
   for(i in 1..1000) {
       network << addRandomLine(network);
   }
   return network;
}

public line addRandomLine(line[] network) {
   point p0();
   if(!network or network.count == 0) {
       p0 = randomPoint(maxLine);
   } else {
       p0 = getRandomPoint(network);
   }

   return line(p0, p0 + randomPoint(maxLine));
}

public point getRandomPoint(line[] network) {
   int randomIndex = randD(network.count).int;
   bool useP0 = randD(2).int == 0;
   if(useP0) {
       return network[randomIndex].p0;
   } else {
       return network[randomIndex].p1;
   }
}



