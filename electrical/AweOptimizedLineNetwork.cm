package custom.awesome.electrical;

public class AweOptimizedLineNetwork { 

    private AweLineNavigation navigation;

    public constructor(line[] lines) { 
        this.navigation = new AweLineNavigation(lines);
    }

    extend public point[] shortestRoute(point start, point end) {
        var found = this.navigation.search(..);

        if (found) { 
            
            point[] result();

            var node = found;
            result << node.end;
            while (node.parentNode != null)
            {
                result << node.end;
                node = node.parentNode;
            }

            result.reverse();
            return result;
        
    }

        return null;
    }
}

public class AweLineNavigation { 

    private str->AwePathNode[] lines() : public readable;

    public constructor(line[] lines) { 
        for (l in lines) { 
            this.add(l);
        }
    }

    extend public AwePathNode search(point start, point end) { 
        
        this.calculateFor(end);
        
        var lines = this.lines.get(this.getKeyFor(start));
        if (!lines) { 
            pln("No lines found for " #start);
            return null;
        }
        
        for (n in lines) {

            n.state = aweNodeState.closed;
            if (n.end == end) { 
                return n;
            }

            sorted double->AwePathNode rawDistances();
            var nodes = this.expandFrom(n);
            for (en in nodes) { 
                rawDistances.put(en.f, en);
            }

            if (!rawDistances.any) {
                continue;
            }

            for (d, no in rawDistances) { 
                if ((no.location == end) or (no.end == end)) { 
                    return no;
                } else { 
                    var r = this.search(no.location, end);
                    if (r) { 
                        return r;
                    }
                }
            }
        }

        return null;
    }

    extend public AwePathNode[] expandFrom(AwePathNode fromNode)  { 

        AwePathNode[] expanded();

        var lines = this.lines.get(this.getKeyFor(fromNode.end));
        if (!lines) { 
            pln("No lines found for " #fromNode);
            return expanded;
        }

        for (node in lines) {

            if (node.state == aweNodeState.closed) { 
                continue;
            }

            if (node.state == aweNodeState.open) {
                var traversalCost = node.getTraversalCost(node.location, node.parentNode.location);
                var gTemp = fromNode.g + traversalCost;
                if (gTemp < node.g)
                {
                    node.parentNode = fromNode;
                    expanded << node;
                }
            }
            else
            {
                // If it's untested, set the parent and flag it as 'Open' for consideration
                node.parentNode = fromNode;
                node.state = aweNodeState.open;
                expanded << node;
            }
        }

        return expanded;
    }

    extend public void calculateFor(point end) { 
        for (k,v in this.lines) { 
            for (n in v) { 
                n.initialize(end);
            }
        }
    }

    final private void add(line l) { 
        this.checkAndAdd(l);
        this.checkAndAdd(line(l.p1, l.p0), true);
    }

    final private void checkAndAdd(line l, bool reverse = false) {
        var k = this.getKeyFor(l.p0);
        if (k !in this.lines) { 
            AwePathNode[] nodes();
            this.lines.put(k, nodes);
        }
        this.lines.get(k) << AwePathNode(l.p0, l.p1, reverse);
    }

    final private str getKeyFor(point p) { 
        return p.x # "_" # p.y # "_" # p.z;
    }
}

public class AwePathNode {

    private AwePathNode parentNode : public readable;
    public point location;
    public point end;
    public double g;
    public double h;
    public aweNodeState state;
    public bool reverse;

    public constructor(point start, point end, bool reverse) {
        this.location = start;
        this.end = end;
        this.state = aweNodeState.untested;
        this.reverse = reverse;
    }

    extend public AwePathNode initialize(point endLocation) { 
        this.h = getTraversalCost(this.location, endLocation);
        this.g = 0;
        return this;
    }

    extend public double f() {
        return this.g + this.h;
    }

    extend public AwePathNode setParentNode(AwePathNode parent) {
        this.parentNode = parent;
        this.g = this.parentNode.g + this.getTraversalCost(this.location, this.parentNode.location);
        return this;
    }

    extend public double getTraversalCost(point location, point otherLocation) {
        return location.distance(otherLocation);
    }

    public str toS() {
        return this.location # " - " # this.state;
    }
}

public enum aweNodeState {
    untested;
    open;
    closed;
}


