package custom.awesome.electrical;

public class AweElectricalCableRoutingAnimation extends AwePointsAnimation {

    private AweElectricalInfeedPoint infeed;
    private AweElectricalCableLine[] allCables();
    private AweElectricalCableLine[] infeedNetwork();
    private line[] infeedNetworkLines();
    private AweOptimizedLineNetwork optimizedNetwork;

    private point[] allVertices();
    private str->AweElectricalCableLine[] pointLineIndex();

    public constructor(AweElectricalInfeedPoint infeed) {
        this.infeed = infeed;
        //scanForInfeeds();
        scanForCables();
        indexPointLine();

        infeedNetwork = identifyNetwork(infeed.spacePoint.v);
        for(cable in infeedNetwork) {
            infeedNetworkLines << cable.spaceLine.v;
        }
        optimizedNetwork = AweOptimizedLineNetwork(infeedNetworkLines);

        super(maxInt);
    }   

    extend private void indexPointLine() {
        for(cable in allCables) {
            str pointStr = cable.spaceLine.v.p0.toS;
            if(!pointLineIndex.get(pointStr)) {
                pointLineIndex.put(pointStr, new AweElectricalCableLine[]());
                if(cable.spaceLine.v.p0 !in allVertices) 
                    allVertices << cable.spaceLine.v.p0;
            }
            pointLineIndex.get(pointStr) << cable;

            pointStr = cable.spaceLine.v.p1.toS;
            if(!pointLineIndex.get(pointStr)) {
                pointLineIndex.put(pointStr, new AweElectricalCableLine[]());
                if(cable.spaceLine.v.p1 !in allVertices) 
                    allVertices << cable.spaceLine.v.p1;
            }
            pointLineIndex.get(pointStr) << cable;
        }
    }

    extend private Point closestVertice(line l) {
        Point closest = null;
        double bestDistance = maxDouble;
        for(v in allVertices) {
            var thisDistance = l.normalIntersect(v).dSquare;
            if(thisDistance < bestDistance) {
                bestDistance = thisDistance;
                closest = v;
            }
        }
        return closest;
    }



    extend private AweElectricalCableLine[] identifyNetwork(point p, AweElectricalCableLine[] visited=new AweElectricalCableLine[]()) {
        str pointStr = p.toS;
        var lines = pointLineIndex.get(pointStr);
        for(l in lines) {
            if(l !in visited) {
                visited << l;
                identifyNetwork(l.spaceLine.v.p0, visited);
                identifyNetwork(l.spaceLine.v.p1, visited);
            }
        }
        return visited;
    }

    public Primitive3D get3D(FetchEnv3D env) {
        var radius = 3inch;
        Awe3D stuff();

        stuff << super(env);

        if(optimizedNetwork) {
            var suggestedRoute = optimizedNetwork.shortestRoute(infeed.spacePoint.v, currentPoint.v);
            Point lastPoint = null;
            for(p in suggestedRoute) {
                if(lastPoint) {
                    Cylinder3D l(lastPoint.v, p, 2inch);
                    l.setMaterial( plainBlueMaterial3D );
                    stuff << l;
                }
                lastPoint = p;
            }
        }
        Sphere3D infeedSphere(infeed.spacePoint.v, radius * 1.5);
        infeedSphere.setMaterial(plainYellowMaterial3D);
        stuff << infeedSphere;

        for(l in infeedNetworkLines) {
            Cylinder3D l(l.p0, l.p1, 1inch);
            // l.setMaterial(cable.active ? plainYellowMaterial3D : plainGrayMaterial3D);
            l.setMaterial( plainYellowMaterial3D );
            stuff << l;
        }
        
        return stuff;
    }

    public point savePoint(int pointIndex, point mousePoint) {
        return mousePoint;
    }

    public Point adjustPoint(int pointIndex, point mousePoint, AnimationMouseInfo mi) {
        return closestVertice(mi.mouseLine);
    }
 

    extend private void scanForCables() {
        for (snapper in this.space.snappers) {
            Object lines = aweDynamicCall snapper.getAweElectricalCableLines();
            if(lines as AweElectricalCableLine[]) {
                for(l in lines) {
                    l.snapper = snapper;
                    allCables << l;
                }
            }
        }
    }

   

}
