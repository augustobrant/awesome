package custom.awesome.electrical;

public class AweHubSnapper extends AweEasySnapper {
    public aweDynamicContract {
        aweDynamic AweElectricalRoute[] getInfeeds();
        aweDynamic AweElectricalRoute[] getRoutes();
    }

    private AweElectricalRoute[] infeeds;

    extend public AweElectricalRoute[] getInfeeds() {
        if (this.infeeds) return this.infeeds;
        
        init this.infeeds();

        var model = this.configurator.AweElectricalModel;
        var top = (model.w / 2, model.d / 2, model.z);

        this.infeeds << new AweElectricalRoute(this, (model.w / 2, model.d / 2, 0), top, true);
        this.infeeds << new AweElectricalRoute(this, (model.w / 2, model.d / 2, model.z * 2), top, true);

        return this.infeeds;
    }

    private AweElectricalRoute[] routes;

    extend public AweElectricalRoute[] getRoutes() {
        if (this.routes) return this.routes;

        init this.routes();

        var model = this.configurator.AweElectricalModel;
        var top = (model.w / 2, model.d / 2, model.z);

        for (c in this.connectorCache.buffer) {
            this.routes << new AweElectricalRoute(this, top, c.pos);
        }

        return this.routes;
    }

    public void connectors(AweConnectorCache cc) { 
        var model = this.configurator.AweElectricalModel;

        cc.makePoint("x0", this, point(0, model.d / 2, model.z), 180deg, ctAlways, false);
        cc.makePoint("x1", this, point(model.w, model.d / 2, model.z), 0deg, ctAlways, false);

        cc.makePoint("y0", this, point(model.w / 2, model.d, model.z), 90deg, ctAlways, false);
        cc.makePoint("y1", this, point(model.w / 2, 0, model.z), 270deg, ctAlways, false);
    }
    
    public AweObject createConfigurator() {
        AweElectricalModel model();

        var z = 3inch;

        model.w = 8inch;
        model.d = 8inch;
        model.h = 72inch - z;
        model.origin = (0, 0, z);
        model.material = shadowTransparencyMaterial3D;

        return model;
    }

    public AweProduct createProduct(AweObject configurator) {
        return new AweElectricalProduct(configurator);
    }
}

public class AweBeamSnapper extends AweEasySnapper {    
    public aweDynamicContract {
        aweDynamic AweElectricalRoute[] getRoutes();
    }

    private AweElectricalRoute[] routes;

    extend public AweElectricalRoute[] getRoutes() {
        if (this.routes) return this.routes;

        init this.routes();

        var model = this.configurator.AweElectricalModel;
        
        this.routes << new AweElectricalRoute(this, (0, model.d / 2, model.z), (model.w, model.d / 2, model.z));

        return this.routes;
    }

    public void connectors(AweConnectorCache cc) { 
        var model = this.configurator.AweElectricalModel;

        cc.makePoint("p0", this, (0, model.d / 2, model.z), 180deg, ctAlways, false);
        cc.makePoint("p1", this, (model.w, model.d / 2, model.z), 0deg, ctAlways, false);
    }

    public AweObject createConfigurator() {
        AweElectricalModel model();

        model.w = 96inch;
        model.d = 4inch;
        model.h = 8inch;
        model.origin = (0, 0, 64inch);

        return model;
    }

    public AweProduct createProduct(AweObject configurator) {
        return new AweElectricalProduct(configurator);
    }
}

public class AweElectricalProduct extends AweProduct {
    public AweModel<AweElectricalModel> model;

    public box localBound() {
        return box(this.model.origin, this.model.w, this.model.d, this.model.h);
    }

    public Primitive3D medium3D() {
        Box3D b(this.localBound());
        b.setMaterial(this.model.material);
        return b;
    }
}

public aweObject AweElectricalModel {
    props (
        double w = 1,
        double d = 1,
        double h = 1,
        point origin = point(),
        Material3D material = lightBlueTransparencyMaterial3D
    );

    extend public double z() {
        return this.h + this.origin.z - 5inch;
    }
}

{
    activeSpace.put(new AweHubSnapper());
    activeSpace.put(new AweBeamSnapper());
}