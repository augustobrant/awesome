package custom.awesome.electrical;


public class AweElectricalInfeedActivationAnimation extends AwePointsAnimation {
    private AweElectricalInfeedPoint[] allInfeeds();
    private AweElectricalInfeedPoint closestInfeed = null;

    public constructor() {
        this.scanForInfeeds();

        super(maxInt);
    }   

    public void rightClick(AnimationMouseInfo mi) {
    }

    public void rightRelease(AnimationMouseInfo mi) {
	    end();
        animate(AweElectricalCableRoutingAnimation(closestInfeed));
    }

    public Primitive3D get3D(FetchEnv3D env) {
        Awe3D prims();
        
        prims << super(..);
        for(infeed in allInfeeds) {
            prims << infeedGeometry(infeed);
        }

        return prims;
    }

    extend private Primitive3D infeedGeometry(AweElectricalInfeedPoint infeed) {
        Awe3D prims();

        //cone
        point origin = infeed.spacePoint.v;
        point tip = origin + point(infeed.spaceOrientation, 3inch);
        Cone3D cone(origin, tip, 2inch, 0);
        cone.doubleSided = true;
        cone.setMaterial(infeed.active ? plainYellowMaterial3D : plainGrayMaterial3D);
        prims << cone;

        return prims;
    }

    public point savePoint(int pointIndex, point mousePoint) {
        if (this.closestInfeed) {
            this.closestInfeed.active = !closestInfeed.active;
            
            this.refresh();
        }

        return mousePoint;
    }

    public Point adjustPoint(int pointIndex, point mousePoint, AnimationMouseInfo mi) {
        this.calculateClosestInfeedTo(mi.mouseLine);
        
        return this.closestInfeed.?spacePoint;
    }

    extend private void scanForInfeeds() {
        for (snapper in this.space.snappers) {
            Object infeeds = aweDynamicCall snapper.getAweElectricalInfeedPoints();
            
            if (infeeds as AweElectricalInfeedPoint[]) {
                for (infeed in infeeds) {
                    infeed.snapper = snapper;
                    
                    this.allInfeeds << infeed;

                    for(cable in infeed.cables) {
                        cable.snapper = snapper;
                    }
                }
            }
        }
    }

    extend private void calculateClosestInfeedTo(line l) {
        double closestDistance = maxDouble;

        for (infeed in this.allInfeeds) {
            var thisDistance = l.normalIntersect(infeed.spacePoint.point).dSquare;

            if (thisDistance < closestDistance) {
                closestDistance = thisDistance;
                closestInfeed = infeed;
            }
        }
    }
}

{
    animate(AweElectricalInfeedActivationAnimation());
}