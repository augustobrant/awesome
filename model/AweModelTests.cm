package custom.awesome.model;

private class Hub extends AweModel {
    private Spoke[] spokes;
    private double radius = .4;

    public constructor() {
        createSpokes();
    }

    extend private void createSpokes() {
        init spokes();
        int count = 3;
        for(i in 0..(count-1)) {
            angle a(360/count*i);
            spokes << Spoke(a, radius);
        }
    }

    public AweModelView view() {
        return HubView(this);
    }
}

private class HubView extends AweModelView {
    
    private GCircle hubCircle;

    public void build() {
        hubCircle = new GCircle(circle(point2D(), .1));
    }
}

private class Spoke extends AweModel {
    private double radius;
    

    private constructor(angle angle, double radius) {
        set*(this: radius);
        point p(angle, radius);
        this.position.orientation = orientation(p);

    }

    public AweModelView view() {
        return SpokeView(this);
    }

    public AweModelConnectorInfo{} _connectorInfo() {
        AweModelConnectorInfo{} connectors();
        connectors << AweModelConnectorInfo("only one", this, AwePosition((radius, 0, 0)));
        return connectors;
    }
}

private class SpokeView extends AweModelView {
    
    private GArrow arrow;

    public void build() {
        var spoke = model.Spoke;
        arrow = new GArrow(point2D(), (spoke.radius, 0));
    }
}

