package custom.awesome.model;

public class AweModel {
    public constructor() {
    }   

    public AwePosition position();

    extend public AwePosition snapperPosition() {
        var position = this.position;
        var parent = this._parent;
        while(parent) {
            position += parent.position;
            parent = parent._parent;
        }
        return position;
    }

    package AweModel _parent = null : copy=null, stream=null;
    package AweModelCache _cache : copy=null, stream=null;

    extend public AweModelView view() {
        return null;
    }



    extend package AweModel{} _descendants(AweModel{} visited = null, AweModel parent=null) {
        if(!visited) {
            init visited();
        }
        if(parent) {
            this._parent = parent;
        }
        for(field in this.class.fields) {
            if(field.name !in ["_parent"]) {
                Object value = this.get(field);
                if(value as AweModel) {
                    if(value !in visited) {
                        visited << value;
                        value._descendants(visited, this);
                    } 
                } else {
                    //maybe a collection? (set, array, dictionary)
                    var collection = _toAweModelArray(value);
                    for(item in collection) {
                        if(item !in visited) {
                            visited << item;
                            item._descendants(visited, this);
                        } 
                    }
                }
            }
        }
        return visited;
    }

    extend private AweModel[] _toAweModelArray(Object propValue) {
        
        AweModel[] array();

        var iteratorBase = propValue.?class.?iterator.?instantiate();

        aweTryCast (iteratorBase as iterator to SeqIterator, SetIterator) {
            iterator.init(propValue);
            
            while (iterator.step()) {
                AweModel obj = iterator.get.AweModel;
                if(obj)
                    array << obj;
            }
        }
        else { 
            if (iteratorBase as MapIterator) { 
                iteratorBase.init(propValue);

                while (iteratorBase.step()) {
                    AweModel obj = iteratorBase.v.AweModel;
                    if(obj)
                        array << obj;
                } 
            }
        }

        return array.count > 0 ? array : null;
    }

    extend package AweModelSnapper _createSnapper() {
        return new AweModelSnapper(this);
    }

    extend public void invalidate() {
        this.invalidateSelf();
        for(model in _descendants) {
            model.invalidateSelf();
        }

    }

    extend private void invalidateSelf() {
        _cache = null;
    }

    extend public AweModelConnectorInfo{} _connectorInfo() {
        return null;
    }
}