package custom.awesome.model;

public class AweModelManager {

    private Snapper snapper;

    public constructor(Snapper snapper) {
        set*(this: snapper);
    }   

    extend private void ensureCache(AweModel model) {
        if(!model._cache) {
            init model._cache();
            model._cache.view = model.view();
        }
    }

    extend private Graph singleModelGraph(AweModel model) {
        this.ensureCache(model);
        if(model._cache.view) {
            return model._cache.view.graph();
        } else return null;
    }

    extend public Graph graph(AweModel model) {
        AweGraph g();
        for(each in allModels(model)) {
            g << singleModelGraph(each);
        }
        return g;
    }

    extend private AweModel{} allModels(AweModel parentModel) {
        AweModel{} allModels();
        allModels << parentModel;
        for(child in parentModel._descendants) {
            allModels << child;
        }

        return allModels;
    }

    extend private void singleModelConnectors(AweModel model, str->Connector cache, ConnectorCollection coll) {
        var infos = model._connectorInfo();
        for(info in infos) {
            str id =  model.readableId # info.id;
            Connector c = cache.get(id);
            if(!c) {
                c = AweModelConnectPoint(snapper);
                cache.put(id, c);
            }
            info.position += model.snapperPosition();
            c.setRot(info.position.orientation);
            c.setPos(info.position.origin);
            coll << c;
        }
    }

    extend package void connectors(AweModel model, str->Connector cache, ConnectorCollection coll) {
        for(each in allModels(model)) {
            singleModelConnectors(each, cache, coll);
        }
    }
    
} 